<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <%= link_to 'WAF Project', root_url, class:"brand" %>

    <div class="nav-collapse collapse">    <!-- this is for the mobile nav -->
      <ul class="nav">
        <li><%= link_to 'Home', root_url %>  </li>
        <li><%= link_to 'Forum', forums_url %></li>

        <% if current_user %>
          <li><%= link_to 'My Account', my_account_url %></li>
          <li><%= link_to 'Projects', projects_path %> </li>
          <li><%= link_to 'Browse Users', users_path %></li>
          <li><%= link_to 'Sign Out', logout_url %>  </li>

        <% else %>
          <li><%= link_to 'Sign Up', sign_up_url %> </li>
          <li><%= link_to 'Sign In', sign_in_url %> </li>
        <% end %>
      </ul>
    </div>
    <% if current_user %>
      <%= form_tag(search_request_url, class: "navbar-search pull-right") do %>
        <div id="search">
          <%= text_field_tag :search_for_this, nil, class: 'search-query', placeholder: 'search...' %>
        </div>
       <% end %>
    <% end %>
  </div>
</div>
