</p>

<h4>Add a comment</h4>
<%= form_for(@comment, url:forums_create_comments_url) do |f| %>
    <% if @forum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@forum.errors.count, "error") %> prohibited this forum from being saved:</h2>
        </div>

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
<% end %>



